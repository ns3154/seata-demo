<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="UTF-8">
            <pattern>%date [%thread] %-5level %logger [%L] - %msg%n</pattern>
        </encoder>
    </appender>
    <!--调试模式下可以改为debug-->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>